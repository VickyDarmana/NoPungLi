<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".History">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="805dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:text="History"
                android:textAlignment="center"
                android:textSize="13pt"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:background="@color/orange"
                android:textColor="@color/black"
                android:paddingLeft="5pt"
                android:text="6 April 2024"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:layout_marginTop="4pt"
                android:textColor="@color/black"
                android:text="Pelaporan anda pada tanggal 4 April 2024 berhasil, juru parkir liar sudah ditangkap dan sedang diproses" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="4pt"
                android:layout_marginRight="5pt"
                android:textColor="@color/black"
                android:text="Anda berhasil melakukan Top up sebesar Rp 20.000 melalui BCA" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="4pt"
                android:layout_marginRight="5pt"
                android:textColor="@color/black"
                android:text="Pembayaran uang parkir di daerah Medan Kota sebesar Rp 5.000 telah dipotong " />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="4pt"
                android:layout_marginRight="5pt"
                android:textColor="@color/black"
                android:text="Pembayaran uang parkir di daerah Medan Denai sebesar Rp 3.000 telah dipotong " />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".Report">

    <LinearLayout
        android:id="@+id/data_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnBekReport"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/orange"
                android:gravity="center"
                android:text="Report"
                android:textColor="@color/black"
                android:textSize="13pt"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8pt"
            android:background="@drawable/shape"
            android:backgroundTint="@color/orange"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6pt"
                android:layout_marginTop="6pt"
                android:layout_marginRight="6pt"
                android:text="Masukkan data pelapor:"
                android:textColor="@color/black"
                android:textSize="7pt" />

            <EditText
                android:id="@+id/edtNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:layout_marginBottom="5pt"
                android:ems="10"
                android:hint="Masukkan Nama"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/edtNoTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:layout_marginBottom="5pt"
                android:ems="10"
                android:hint="Masukkan No.Telp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="8pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8pt"
            android:layout_marginRight="8pt"
            android:background="@drawable/shape"
            android:backgroundTint="@color/orange"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6pt"
                android:layout_marginTop="6pt"
                android:layout_marginRight="6pt"
                android:text="Masukkan data laporan:"
                android:textColor="@color/black"
                android:textSize="7pt" />

            <EditText
                android:id="@+id/edtKota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:layout_marginBottom="5pt"
                android:ems="10"
                android:hint="Masukkan Nama Kota"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/edtKecamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:layout_marginBottom="5pt"
                android:ems="10"
                android:hint="Masukkan Nama Kecamatan"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="8pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8pt"
            android:layout_marginRight="8pt"
            android:layout_marginTop="5pt"
            android:background="@drawable/shape"
            android:backgroundTint="@color/orange"
            android:elevation="2dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtKeluhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5pt"
                android:ems="10"
                android:hint="Keluhan"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="8pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="8pt"
            android:layout_marginRight="8pt"
            android:layout_marginTop="5pt"
            android:background="@drawable/shape"
            android:backgroundTint="@color/orange"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:srcCompat="@drawable/photo" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Upload Foto"
                android:textColor="@color/black"
                android:textSize="6pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5pt"
            android:background="@drawable/shape"
            android:backgroundTint="@color/orange"
            android:elevation="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7pt"
                android:layout_marginTop="12pt"
                android:layout_marginRight="7pt"
                android:backgroundTint="@color/yellow"
                android:text="Submit Laporan"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
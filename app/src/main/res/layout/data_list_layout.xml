<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/gambarJuru"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtNamaJuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Nama Juru Parkir"
        app:layout_constraintStart_toEndOf="@+id/gambarJuru"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtDaerahJuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Daerah: "
        app:layout_constraintStart_toStartOf="@+id/txtNamaJuru"
        app:layout_constraintTop_toBottomOf="@+id/txtNamaJuru"/>

    <TextView
        android:id="@+id/txtDeskripsiJuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Deskripsi: "
        app:layout_constraintStart_toStartOf="@+id/txtDaerahJuru"
        app:layout_constraintTop_toBottomOf="@+id/txtDaerahJuru"/>

</androidx.constraintlayout.widget.ConstraintLayout>